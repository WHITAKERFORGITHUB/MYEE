		// TODO Auto-generated method stub

	}

	@Override
	public Product update(Product product) throws ModifyException {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public Product delete(String prod_no) throws RemoveException {
		// TODO Auto-generated method stub
		return null;
	}

}
